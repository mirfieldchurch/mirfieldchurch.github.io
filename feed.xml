---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Mirfield Evangelical Church</title>
    <description>Your latest MEC sermons</description>
    <link>{{ site.url | xml_escape }}</link>
    <language>en-gb</language>
    <copyright>{{ 'now' | date: '%Y' }} Mirfield Evangelical Church. All rights reserved.</copyright>
    <image>
    <url>{{ '/img/logo.png' | prepend: site.url }}</url>
    <title>Mirfield Evangelical Church</title>
    <link>{{ site.url | xml_escape }}</link>
    </image>
    {% assign sorted_sermons = (site.sermons | sort: 'date') | reverse %}
    {% for sermon in sorted_sermons %}
    {% capture details %}{{ sermon.book }} - {{ sermon.pastor  }}{% endcapture %}
    
    {% capture pubDate %}
    {% if sermon.morning %}
      {{sermon.date | date: '%a' }}, {{ sermon.date  | date_to_string }} 10:45:00 +0000 }}
     {% else %}
      {{sermon.date | date: '%a' }}, {{ sermon.date  | date_to_string }} 18:30:00 +0000 }}
     {% endif %}
    {% endcapture %}
        <item>
          <title>{{ sermon.title | xml_escape }}</title>
          <description>{{ details| xml_escape }}</description>
          <pubDate>{{ pubDate | xml_escape }}</pubDate>
          <author>{{ sermon.pastor | xml_escape }}</author>
          <enclosure url="{{ sermon.audio }}" length="3000" type="audio/mpeg" />
          <guid isPermaLink="true">{{ sermon.audio }}</guid>
        </item>
    {% endfor %}
  </channel>
</rss>
